<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="@color/table_text"
    
     >

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
       
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/sn_bid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="9"
            android:background="@drawable/sn_bg"
            android:gravity="center" />

        <Spinner
            android:id="@+id/sn_zhouci"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="7"
            android:background="@drawable/sn_bg"
            android:gravity="center" />

        <Spinner
            android:id="@+id/sn_week"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="5"
            android:background="@drawable/sn_bg"
            android:gravity="center" />
    </LinearLayout>
    <ScrollView
        android:layout_below="@id/rl"
        android:id="@+id/sv_free"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#6600ff99"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="第一大节"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_one"
                        style="@style/FreeRoomItemText"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="第二大节"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_two"
                        style="@style/FreeRoomItemText"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#66ffff99"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="第三大节"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_three"
                        style="@style/FreeRoomItemText"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="第四大节"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_four"
                        style="@style/FreeRoomItemText"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="#66ff0099"
                android:orientation="horizontal" >

                

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="第五大节"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_five"
                        style="@style/FreeRoomItemText"
/>                 
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView 
        android:id="@+id/tv_alter"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:background="@color/main_color"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="本周是第14周"
        />
</RelativeLayout>